@model IEnumerable<yujvidya.Models.Student>
@{
    ViewData["Title"] = "Index";
}
<h2>Students</h2>
<p>
    <a asp-action="Create">Register</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
			<th>
                <a asp-action="Index" asp-route-sortColumn="Id" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(x => x.Id)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortColumn="FirstName" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(x => x.FirstName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortColumn="LastName" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(x => x.LastName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortColumn="ToDate" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(x => x.EnrolledUpto)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
			    <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrolledUpto)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
				    <a asp-action="RenewEnrollment" asp-route-id="@item.Id">Renew</a>
                </td>
            </tr>
        }
    </tbody>
</table>

