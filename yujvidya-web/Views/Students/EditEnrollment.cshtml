<script src="/lib/jquery/dist/jquery.js"></script>
<script src="/js/EnrollmentValidation.js"></script>

@model yujvidya.Models.Enrollment

@{
    ViewData["Title"] = "Edit - Enrollment";
}

<h2>Edit</h2>

<form asp-action="SaveEnrollment">
    <div class="form-horizontal">
        <h4>Enrollment</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<input type="hidden" asp-for="Id" />
		<input type="hidden" asp-for="PersonId" />
		
        <div class="form-group">
            <label asp-for="Id" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Id)
            </div>
        </div>
	    <div class="form-group">
            <label asp-for="PersonId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.PersonId)
            </div>
        </div>
		<div class="form-group">
            <label asp-for="EnrollmentTypeId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="EnrollmentTypeId" id="EnrollmentTypeId" class="form-control" asp-items="@(new SelectList(ViewBag.EnrollmentTypes,"Id","Name"))">
                    <option value="">-- Select Fee Detail --</option>
                </select>
                <span asp-validation-for="EnrollmentTypeId" class="text-danger" />
            </div>
        </div>
		<div class="form-group">
            <label asp-for="Amount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="currency" asp-for="Amount" id="EnrollmentAmount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger" />
            </div>
        </div>
		<div class="form-group">
            <label asp-for="FromDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="date" asp-for="FromDate" id="EnrollmentFromDate" class="form-control" />
                <span asp-validation-for="FromDate" class="text-danger"></span>
            </div>
        </div>
		<div class="form-group">
            <label asp-for="ToDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="date" asp-for="ToDate" id="EnrollmentToDate" class="form-control" />
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
        </div>
		<div class="form-group">
            <label asp-for="PreferredBatchScheduleId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PreferredBatchScheduleId" class="form-control" asp-items="@(new SelectList(ViewBag.BatchSchedules,"Id","StartTime"))">
                    <option value="">-- Select Batch --</option>
                </select>
                <span asp-validation-for="PreferredBatchScheduleId" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Enrollment" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
